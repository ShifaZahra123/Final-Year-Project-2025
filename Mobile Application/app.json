{
  "expo": {
    "name": "Meat Quality App",
    "slug": "meat-quality-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E8B57"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meatquality.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos of meat for quality analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select meat images for analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E8B57"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.meatquality.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "your-expo-username",
    "scheme": "meat-quality-app",
    "plugins": [
      "expo-image-picker",
      "expo-camera",
      "expo-media-library",
      "expo-file-system",
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/custom-font.ttf"]
        }
      ]
    ]
  }
}
